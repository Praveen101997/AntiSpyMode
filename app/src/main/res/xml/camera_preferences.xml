<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="0"
        app:entries="@array/camera_location_entries"
        app:entryValues="@array/camera_location_values"
        app:key="pref_camera_location"
        app:title="Select Camera"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:key="pref_keep_screen_on"
        app:summaryOff="Disable"
        app:summaryOn="Enable"
        app:title="Keep Screen On" />

    <ListPreference
        app:defaultValue="12"
        app:entries="@array/camera_preview_size_entries"
        app:entryValues="@array/camera_preview_size_values"
        app:key="pref_preview_size"
        app:title="Preview Size"
        app:useSimpleSummaryProvider="true" />

</androidx.preference.PreferenceScreen>
